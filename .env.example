# ============================================================================
# .env.example — Приклад конфігурації для локального розробки та production
# ============================================================================
# Копіюй цей файл в .env і заповни реальними значеннями
# На сервері Fly.io вказуй ці значення через fly secrets set

# ============================================================================
# DJANGO НАСТРОЙКИ
# ============================================================================

# Режим налагодження (TRUE для розробки, FALSE для production)
# DEBUG — керується локальним `.env`.

# Секретний ключ Django — задавай у локальному `.env` або через секрети провайдера.

# Дозволені хости (на локалі: localhost,127.0.0.1; на Fly: твій-домен.fly.dev)
ALLOWED_HOSTS=localhost,127.0.0.1,твій-домен.fly.dev

# ============================================================================
# DATABASE (PostgreSQL)
# ============================================================================

# Для локальної розробки можна залишити PostgreSQL локально
# Формат: postgres://користувач:пароль@хост:порт/база_даних
DATABASE_URL=postgres://user:password@localhost:5432/dbname

# Або якщо використовуєш Neon (безкоштовний):
# DATABASE_URL=postgresql://user:password@ep-....neon.tech/dbname?sslmode=require

# ============================================================================
# REDIS
# ============================================================================

# Локально (Docker):
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Або якщо використовуєш Upstash (безкоштовний):
# REDIS_HOST=your-redis.upstash.io
# REDIS_PORT=39019
# REDIS_PASSWORD=your_upstash_password

# ============================================================================
# CLOUDFLARE R2 (Object Storage)
# ============================================================================

AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_STORAGE_BUCKET_NAME=binify-bucket
AWS_S3_ENDPOINT_URL=https://your-account.r2.cloudflarestorage.com
AWS_S3_REGION_NAME=auto
AWS_S3_CUSTOM_DOMAIN=binify-bucket.your-account.r2.cloudflarestorage.com
# Задай `AWS_*` у локальному `.env` або в секретах хостингу.

# ============================================================================
# JWT (для REST API)
# ============================================================================

# Те ж що DJANGO_SECRET_KEY, або окремий ключ
SIMPLE_JWT_SECRET=change_this_jwt_secret
SIMPLE_JWT_ALGORITHM=HS256

# ============================================================================
# SITE ID (для django.contrib.sites)
# ============================================================================
# `SITE_ID` можна визначити у локальному `.env`.
SITE_ID=1

# ============================================================================
# CSRF та CORS (для production)
# ============================================================================

# Адреси, з яких дозволені запити до API
CSRF_TRUSTED_ORIGINS=https://your-domain.fly.dev,https://www.your-domain.fly.dev

# ============================================================================
# EMAIL (опціонально, для надсилання листів)
# ============================================================================

# Якщо хочеш надсилати листи через SMTP (наприклад, SendGrid, Gmail):
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=твій-email@gmail.com
# EMAIL_HOST_PASSWORD=твій-app-password

# ============================================================================
# ІНШІ ПАРАМЕТРИ
# ============================================================================

# Кількість воркерів gunicorn (для production, залежить від CPU)
GUNICORN_WORKERS=2

# Timeout для запитів (секунди)
GUNICORN_TIMEOUT=60
# ============================================================================
# SECURITY (для HTTPS на production)
# ============================================================================

# Автоматично редиректу HTTP → HTTPS (ТІЛЬКИ для production!)
SECURE_SSL_REDIRECT=False

# Забороняй відправку cookie без HTTPS (ТІЛЬКИ для production!)
## Для production рекомендується вмикати нижчі опції (але не робіть цього локально без HTTPS)
SECURE_COOKIE_SECURE=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# HSTS заголовок (HSTS: Strict-Transport-Security) — забороняє переходу на HTTP через 1 рік
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# ПРИМІТКА: Коли деплоюєш на Fly.io, SECURE_SSL_REDIRECT auto=True (бо Fly має SSL)
# Встановлюй ці в True тільки для production!